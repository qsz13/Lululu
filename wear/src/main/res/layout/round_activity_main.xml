<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".MainActivity" tools:deviceIds="wear_round"
    android:background="@color/WearBackground">

    <TextView android:id="@+id/topTextView" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/YouLued"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/countTextView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp"
        android:layout_centerInParent="true"
        android:textColor="@color/WearTextColor" />
    <TextView android:id="@+id/countTextView" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" android:text="0"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_margin="50dp"
        android:gravity="center"
        android:textColor="@color/orange"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/bottomTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/UnitOfLu"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@+id/topTextView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/WearTextColor" />
</RelativeLayout>
